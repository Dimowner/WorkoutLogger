<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  android:orientation="horizontal"
				  android:layout_width="match_parent"
				  android:layout_height="@dimen/exercises_group_height"
				  android:clickable="true">
	<ImageView
			android:id="@+id/exe_group_image"
			android:layout_width="@dimen/exercises_group_image_width"
			android:layout_height="@dimen/exercises_group_height"
			android:scaleType="centerCrop"
			android:background="@color/colorPrimaryLight"
			android:src="@drawable/default_cover"/>
	<TextView
			android:id="@+id/exe_group_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingStart="@dimen/exercises_group_text_left_padding"
			android:paddingEnd="@dimen/padding_small"
			android:textSize="16sp"
			android:layout_gravity="center_vertical"
			android:text="Privet name"/>
	<ImageView
			android:id="@+id/exe_group_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingStart="@dimen/padding_small"
			android:paddingEnd="@dimen/padding_standard"
			android:src="@drawable/chevron_down"/>

</LinearLayout>
